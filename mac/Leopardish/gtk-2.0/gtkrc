   {

        image
        {
            function			= BOX
            recolorable			= TRUE
            state				= PRELIGHT
            file				= "option-button.png"
            border			= { 10, 24, 11, 11}
            stretch			= TRUE
        }
        image
        {
            function			= BOX
            recolorable			= TRUE
            file				= "option-button.png"
            border			= { 10, 24, 11, 11}
            stretch			= TRUE
        }
        image
        {
            function			= TAB
            state				= INSENSITIVE
            recolorable			= TRUE
            overlay_file		= "option-menu.png"
            overlay_stretch		= FALSE
        }
        image
        {
            function			= TAB
            recolorable			= TRUE
            overlay_file		= "option-menu.png"
            overlay_border		= { 0, 0, 0, 0 }
            overlay_stretch		= FALSE
        }
   }
